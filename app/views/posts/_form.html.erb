<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>Artigo não pôde ser salvo:
<!-- <%= pluralize(@post.errors.count, "error") %> -->
<!--         <%= "impedem" && @post.errors.count %> -->
</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Título %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Conteúdo %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :Autor %><br />
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :'Data de publicação' %><br />
    <%= f.date_select :pub_date %>
  </div>
  <div class="field">
    <%= f.label :Status %><br />
    <%= f.select :status, ['Publicada', "Em Revisão", 'Rascunho'] %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
