<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>t(:post_not_saved):</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t(:title) %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label t(:body) %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label t(:author) %><br />
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label t(:pub_date_message) %><br />
    <%= f.date_select :pub_date, :order => [:day,:month,:year],
    :use_month_numbers => true %>
  </div>
  <div class="field">
    <%= f.label t(:status) %><br />
    <%= f.select :status, [t(:status_published), t(:status_revision), t(:status_draft)].zip([1,2,3]) %>
  </div>
  <div>
    <%= f.label :tag_tokens, "Tags" %><br />
    <%= f.text_field :tag_tokens, "data-pre" => @post.tags.map(&:attributes).to_json %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
