<h1><%= t(:post_list) %></h1>

<table>
  <tr>
    <th><%= t(:title) %></th>
    <th><%= t(:body) %></th>
    <th><%= t(:author) %></th>
    <th><%= t(:pub_date_message) %></th>
    <th><%= t(:status) %></th>
    <th><%= t(:published) %>?</th>
    <th>Tags</th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= truncate post.body, :length => 250, :omission => " (...)" %></td>
    <td><%= post.author %></td>
    <td><%= l post.pub_date, :format => :long %></td>
    <td><%= status_to_s post %></td>
    <td><%= post.is_published? ? t(:_yes) : t(:_no) %></td>
    <td><%= truncate post.tag_names, :length => 250, :omission => " (...)" %></td>
    <td><%= link_to t(:show), post %></td>
    <td><%= link_to t(:edit), edit_post_path(post) %></td>
    <td><%= link_to t(:delete), post, confirm: t(:are_you_sure?), method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t(:new_article), new_post_path %><br />
<%= link_to t(:tag_list), tags_path %>
