<h1>Lista de artigos</h1>

<table>
  <tr>
    <th>Título</th>
    <th>Corpo</th>
    <th>Autor</th>
    <th>Data de publicação</th>
    <th>Status</th>
    <th>Publicada?</th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= truncate post.body, :length => 250, :omission => " (...)" %></td>
    <td><%= post.author %></td>
    <td><%= post.pub_date %></td>
    <td><%= post.status %></td>
    <td><%= post.published? ? 'Sim' : 'Não' %></td>
    <td><%= link_to 'Mostrar', post %></td>
    <td><%= link_to 'Editar', edit_post_path(post) %></td>
    <td><%= link_to 'Deletar', post, confirm: 'Você tem certeza?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo Artigo', new_post_path %>
