<h1><%= t(:post_list) %></h1>

<table>
  <tr>
    <th><%= t(:title) %></th>
    <th><%= t(:body) %></th>
    <th><%= t(:author) %></th>
    <th><%= t(:pub_date_message) %></th>
    <th><%= t(:status) %></th>
    <th><%= t(:published) %>?</th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= truncate post.body, :length => 250, :omission => " (...)" %></td>
    <td><%= post.author %></td>
    <td><%= post.pub_date %></td>
    <td><%= post.status %></td>
    <td><%= post.published? ? t(:yes) : t(:no) %></td>
    <td><%= link_to t(:show), post %></td>
    <td><%= link_to t(:edit), edit_post_path(post) %></td>
    <td><%= link_to t(:delete), post, confirm: 'VocÃª tem certeza?', method: :delete %></td>
  </tr>
<% end %>
</table>

