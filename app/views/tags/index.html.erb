<h1><%= t(:tag_list) %></h1>

<table>
  <tr>
    <th><%= t(:name) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.name %></td>
    <td><%= link_to t(:show), tag %></td>
    <td><%= link_to t(:edit), edit_tag_path(tag) %></td>
    <td><%= link_to t(:delete), tag, confirm: t(:you_sure), method: :delete %></td>
  </tr>
<% end %>
</table>

